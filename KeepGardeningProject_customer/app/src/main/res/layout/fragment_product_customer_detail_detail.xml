<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".UI.ProductCustomerDetail.tabs.ProductCustomerDetailDetailFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_pcdd_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_size_middle"
                android:text="상품상세설명 입니다!\n사게팝니다" />

            <ImageView
                android:id="@+id/image_pcdd"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>