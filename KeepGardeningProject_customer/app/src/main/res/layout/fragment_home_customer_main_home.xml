<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_middle"
    android:transitionGroup="true"
    tools:context=".UI.HomeCustomerMainHome.HomeCustomerMainHomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionGroup="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:transitionGroup="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_top_big"
                android:orientation="horizontal"
                android:transitionGroup="true">

                <LinearLayout
                    android:id="@+id/btn_hcmh_menu1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hcmh_1"
                        android:layout_width="@dimen/homeCustomerMainHome_icon_size"
                        android:layout_height="@dimen/homeCustomerMainHome_icon_size"
                        android:background="@drawable/background_hcmh_icon"
                        android:padding="5dp"
                        android:src="@drawable/img_plant" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textView_hcmh_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="다육식물"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_hcmh_menu2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hcmh_2"
                        android:layout_width="@dimen/homeCustomerMainHome_icon_size"
                        android:layout_height="@dimen/homeCustomerMainHome_icon_size"
                        android:padding="5dp"
                        android:background="@drawable/background_hcmh_icon"
                        android:src="@drawable/img_orchid" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textView_hcmh_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="동서양란"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_hcmh_menu3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hcmh_3"
                        android:layout_width="@dimen/homeCustomerMainHome_icon_size"
                        android:layout_height="@dimen/homeCustomerMainHome_icon_size"
                        android:padding="5dp"
                        android:background="@drawable/background_hcmh_icon"
                        android:src="@drawable/img_monstera" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textView_hcmh_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="관엽식물"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_hcmh_menu4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hcmh_4"
                        android:layout_width="@dimen/homeCustomerMainHome_icon_size"
                        android:layout_height="@dimen/homeCustomerMainHome_icon_size"
                        android:padding="5dp"
                        android:background="@drawable/background_hcmh_icon"
                        android:src="@drawable/img_bonsai" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textView_hcmh_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="분재"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_hcmh_menu5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hcmh_5"
                        android:layout_width="@dimen/homeCustomerMainHome_icon_size"
                        android:layout_height="@dimen/homeCustomerMainHome_icon_size"
                        android:padding="5dp"
                        android:background="@drawable/background_hcmh_icon"
                        android:src="@drawable/img_auction" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textView_hcmh_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="경매"

                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_top_big"
                android:orientation="horizontal"
                android:transitionGroup="true">

                <LinearLayout
                    android:id="@+id/btn_hcmh_menu6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hcmh_6"
                        android:layout_width="@dimen/homeCustomerMainHome_icon_size"
                        android:layout_height="@dimen/homeCustomerMainHome_icon_size"
                        android:padding="5dp"
                        android:background="@drawable/background_hcmh_icon"
                        android:src="@drawable/img_commodity" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textView_hcmh_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="농산물"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_hcmh_menu7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hcmh_7"
                        android:layout_width="@dimen/homeCustomerMainHome_icon_size"
                        android:layout_height="@dimen/homeCustomerMainHome_icon_size"
                        android:padding="5dp"
                        android:background="@drawable/background_hcmh_icon"
                        android:src="@drawable/img_seed" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textView_hcmh_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="씨앗/묘목"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_hcmh_menu8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hcmh_8"
                        android:layout_width="@dimen/homeCustomerMainHome_icon_size"
                        android:padding="5dp"
                        android:layout_height="@dimen/homeCustomerMainHome_icon_size"
                        android:background="@drawable/background_hcmh_icon"
                        android:src="@drawable/img_bouquet" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textView_hcmh_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="꽃다발"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_hcmh_menu9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hcmh_9"
                        android:layout_width="@dimen/homeCustomerMainHome_icon_size"
                        android:layout_height="@dimen/homeCustomerMainHome_icon_size"
                        android:padding="5dp"
                        android:background="@drawable/background_hcmh_icon"
                        android:src="@drawable/img_pot" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textView_hcmh_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="원예자재류"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_hcmh_menu10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_hcmh_10"
                        android:layout_width="@dimen/homeCustomerMainHome_icon_size"
                        android:layout_height="@dimen/homeCustomerMainHome_icon_size"
                        android:padding="5dp"
                        android:background="@drawable/background_hcmh_icon"
                        android:src="@drawable/img_money" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textView_hcmh_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="천원샵"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:transitionGroup="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_extra_bold"
                    android:text="인기상품"
                    android:textColor="@color/black"
                    android:textSize="@dimen/homeCustomerMainHome_title_text_size"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_hcmh_favoriteGoods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_size_middle"
                    android:transitionGroup="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:transitionGroup="true">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_extra_bold"
                    android:text="추천상품"
                    android:textColor="@color/black"
                    android:textSize="@dimen/homeCustomerMainHome_title_text_size"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_hcmh_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_size_middle"
                    android:nestedScrollingEnabled="true"
                    android:overScrollMode="never"
                    android:transitionGroup="true" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>