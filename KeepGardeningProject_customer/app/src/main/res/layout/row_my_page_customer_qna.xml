<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ProductQuestionRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_size"
    android:background="@color/semiwhite"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_qc_replyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size"
            android:fontFamily="@font/nanum_square_round_extra_bold"
            android:text="답변완료"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/padding_size_middle">

            <ImageView
                android:id="@+id/imageview_qc_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_top"
                android:orientation="vertical">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textview_qc_storeName"
                    android:layout_width="212dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:gravity="center_vertical"
                    android:text="상점이름"
                    android:textSize="@dimen/text_size_14" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textview_qc_productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:gravity="center_vertical"
                    android:text="상품이름"
                    android:textSize="@dimen/text_size_14"
                    tools:layout_weight="1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textview_qc_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:gravity="center_vertical"
                    android:text="질문내역"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textview_qc_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:visibility="visible"
                    app:drawableEndCompat="@drawable/ic_arrow_right_24px"
                    app:fontFamily="@font/nanum_square_round_extra_bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white" />

</LinearLayout>