<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_rowOrderCheckForm_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nanum_square_round_regular"
            android:text="상품 금액"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_rowOrderCheckForm_productImage"
            app:layout_constraintTop_toBottomOf="@+id/textView_rowOrderCheckForm_orderPrice"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView_rowOrderCheckForm_productImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/app" />

        <TextView
            android:id="@+id/textView_rowOrderCheckForm_deliveryState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanum_square_round_regular"
            android:text="배송상태"
            app:layout_constraintStart_toEndOf="@+id/imageView_rowOrderCheckForm_productImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_rowOrderCheckForm_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanum_square_round_regular"
            android:text="상품명"
            app:layout_constraintStart_toEndOf="@+id/imageView_rowOrderCheckForm_productImage"
            app:layout_constraintTop_toBottomOf="@+id/textView_rowOrderCheckForm_deliveryState" />

        <TextView
            android:id="@+id/textView_rowOrderCheckForm_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanum_square_round_regular"
            android:text="옵션"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/imageView_rowOrderCheckForm_productImage"
            app:layout_constraintTop_toBottomOf="@+id/textView_rowOrderCheckForm_productName" />

        <TextView
            android:id="@+id/textView_rowOrderCheckForm_orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanum_square_round_regular"
            android:text="주문금액 (상세)"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/imageView_rowOrderCheckForm_productImage"
            app:layout_constraintTop_toBottomOf="@+id/textView_rowOrderCheckForm_option" />

        <TextView
            android:id="@+id/textView_rowOrderCheckForm_orderPriceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/nanum_square_round_regular"
            android:text="00,000원"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_rowOrderCheckForm_option" />

        <TextView
            android:id="@+id/textView_rowOrderCheckForm_productPriceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nanum_square_round_regular"
            android:text="00,000원"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_rowOrderCheckForm_orderPriceValue"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>