<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:transitionGroup="true"
    tools:context=".UI.AuctionSellerMain.AuctionSellerMainFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_auctionSellerMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.KeepGardeningProject_seller.Toolbar" />

    <TextView
        android:id="@+id/textView_auctionSellerMain_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size"
        android:layout_marginTop="@dimen/margin_size_top"
        android:fontFamily="@font/nanum_square_round_regular"
        android:text="카테고리 > 경매" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_joinSellerMain"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="@dimen/padding_size_middle"
                tools:src="@tools:sample/backgrounds/scenic" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_top"
                android:padding="@dimen/padding_size_middle">

                <TextView
                    android:id="@+id/textView_auctionSellerMain_productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanum_square_round_extra_bold"
                    android:text="상품 이름"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_auctionSellerMain_prodcutSellerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nanum_square_round_regular"
                    android:text="상점 이름"
                    app:layout_constraintEnd_toEndOf="@+id/textView_auctionSellerMain_productName"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/textView_auctionSellerMain_productName"
                    app:layout_constraintTop_toBottomOf="@+id/textView_auctionSellerMain_productName" />

                <TextView
                    android:id="@+id/textView_auctionSellerMain_openPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:text="경매 시작가"
                    app:layout_constraintEnd_toEndOf="@+id/textView_auctionSellerMain_time"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView_auctionSellerMain_time"
                    app:layout_constraintTop_toBottomOf="@+id/textView_auctionSellerMain_time" />

                <TextView
                    android:id="@+id/textView_auctionSellerMain_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="116dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:text="남은 시간"
                    android:textColor="@color/Red"
                    app:layout_constraintStart_toEndOf="@+id/textView_auctionSellerMain_productName"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_auctionSellerMain_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:text="경매 상태"
                    app:layout_constraintEnd_toEndOf="@+id/textView_auctionSellerMain_nowPrice"
                    app:layout_constraintStart_toStartOf="@+id/textView_auctionSellerMain_nowPrice"
                    app:layout_constraintTop_toBottomOf="@+id/textView_auctionSellerMain_nowPrice" />

                <TextView
                    android:id="@+id/textView_auctionSellerMain_nowPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:text="현재 가격"
                    app:layout_constraintEnd_toEndOf="@+id/textView_auctionSellerMain_openPrice"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView_auctionSellerMain_openPrice"
                    app:layout_constraintTop_toBottomOf="@+id/textView_auctionSellerMain_openPrice" />

                <TextView
                    android:id="@+id/textView_auctionSellerMain_stateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:text="입찰가능"
                    android:textColor="@color/colorAccent3"
                    app:layout_constraintEnd_toEndOf="@+id/textView_auctionSellerMain_nowPriceValue"
                    app:layout_constraintTop_toBottomOf="@+id/textView_auctionSellerMain_nowPriceValue" />

                <TextView
                    android:id="@+id/textView_auctionSellerMain_nowPriceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:text="₩ 현재 가격"
                    app:layout_constraintEnd_toEndOf="@+id/textView_auctionSellerMain_openPriceValue"
                    app:layout_constraintTop_toBottomOf="@+id/textView_auctionSellerMain_openPriceValue" />

                <TextView
                    android:id="@+id/textView_auctionSellerMain_openPriceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:text="₩ 경매 시작 가격"
                    app:layout_constraintEnd_toEndOf="@+id/textView_auctionSellerMain_timeValue"
                    app:layout_constraintTop_toBottomOf="@+id/textView_auctionSellerMain_timeValue" />

                <TextView
                    android:id="@+id/textView_auctionSellerMain_timeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:text="00일 00시"
                    android:textColor="@color/Red"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView_auctionSellerMain_time" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <view
                android:id="@+id/materialDivider"
                class="com.google.android.material.divider.MaterialDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_top"
                android:padding="@dimen/padding_size_middle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_size_top"
                android:orientation="horizontal"
                android:padding="@dimen/padding_size_middle">

                <TextView
                    android:id="@+id/textView_auctionSellerMain_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:text="경매 기간" />

                <TextView
                    android:id="@+id/textView_auctionSellerMain_periodValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_top"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:text="23/08/09 00:00 ~ 23/08/26 00:00" />
            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_auctionSellerMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_top"
                android:background="@color/white"
                app:tabMode="fixed">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세정보"
                    />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경매정보"
                    />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문의"
                    />

            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager_auctionSellerMain_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.viewpager2.widget.ViewPager2>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/button_auctionSellerMain_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size"
        android:layout_marginRight="@dimen/margin_size"
        android:fontFamily="@font/nanum_square_round_bold"
        android:text="수정"
        android:textSize="@dimen/text_size_18"
        app:cornerRadius="7dp" />

</LinearLayout>