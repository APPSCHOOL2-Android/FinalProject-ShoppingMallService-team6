<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetCategory"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <view
        android:id="@+id/view"
        class="com.google.android.material.bottomsheet.BottomSheetDragHandleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_categoryBottomSheet_plant"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다육식물"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:icon="@drawable/img_plant"
        app:iconPadding="10dp"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/button_categoryBottomSheet_orchid"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="동서양란"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:icon="@drawable/img_orchid"
        app:iconPadding="10dp"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/button_categoryBottomSheet_monstera"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="관엽식물"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:icon="@drawable/img_monstera"
        app:iconPadding="10dp"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/button_categoryBottomSheet_bonsai"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="분재"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:icon="@drawable/img_bonsai"
        app:iconPadding="10dp"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/button_categoryBottomSheet_commodity"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="농산물"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:icon="@drawable/img_commodity"
        app:iconPadding="10dp"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/button_categoryBottomSheet_seed"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="씨앗/묘목"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:icon="@drawable/img_seed"
        app:iconPadding="10dp"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/button_categoryBottomSheet_bouquet"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="꽃다발"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:icon="@drawable/img_bouquet"
        app:iconPadding="10dp"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/button_categoryBottomSheet_pot"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="원예자재류"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:icon="@drawable/img_pot"
        app:iconPadding="10dp"
        app:iconTint="@color/black" />
</LinearLayout>