<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.MyPageSellerQnA.MyPageSellerQnAFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.KeepGardeningProject_seller.Toolbar"
        android:id = "@+id/materialToolbar_seller_question"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <com.google.android.material.button.MaterialButton
            android:layout_margin="@dimen/margin_size_5"
            android:layout_width="wrap_content"
            android:id = "@+id/button_qs_answer_all"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_bold"
            android:text = "전체" />

        <com.google.android.material.button.MaterialButton
            android:layout_margin="@dimen/margin_size_5"
            android:backgroundTint="@color/gray"
            android:id = "@+id/button_qs_answered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_bold"
            android:text = "답변완료"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_margin="@dimen/margin_size_5"
            android:backgroundTint="@color/gray"
            android:id = "@+id/button_qs_not_answered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_bold"
            android:text = "미답변" />



    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_size_middle">

        <androidx.recyclerview.widget.RecyclerView
            android:id = "@+id/recyclerView_seller_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </ScrollView>




</LinearLayout>