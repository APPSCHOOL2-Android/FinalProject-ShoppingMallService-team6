<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_margin="@dimen/margin_size"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#516E7783"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        android:layout_margin="@dimen/margin_size"
        android:id = "@+id/textView_seller_product_state"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "결제완료"
        android:textColor = "@color/colorPrimary"
        android:textSize = "@dimen/text_size_20" />

    <ImageView
        android:id="@+id/imageView_seller_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_seller_product_state" />

    <TextView
        android:layout_marginTop="@dimen/margin_size"
        android:layout_marginStart="@dimen/margin_size"
        android:id = "@+id/textView_seller_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "주문번호:"
        app:layout_constraintLeft_toRightOf="@id/imageView_seller_product"
        app:layout_constraintTop_toBottomOf="@id/textView_seller_product_state"/>

    <TextView
        android:layout_marginTop="@dimen/margin_size"
        android:layout_marginStart="@dimen/margin_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "000012345"
        app:layout_constraintLeft_toRightOf="@id/textView_seller_order_number"
        app:layout_constraintTop_toBottomOf="@id/textView_seller_product_state"/>

    <TextView
        android:id = "@+id/textview_seller_product_name"
        android:layout_marginStart="@dimen/margin_size"
        android:textStyle="bold"
        android:fontFamily="@font/nanum_square_round_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "제품이름:"
        app:layout_constraintLeft_toRightOf="@id/imageView_seller_product"
        app:layout_constraintTop_toBottomOf="@id/textView_seller_order_number"/>

    <TextView
        android:layout_marginStart="@dimen/margin_size"
        app:layout_constraintLeft_toRightOf="@id/imageView_seller_product"
        app:layout_constraintTop_toBottomOf="@id/textview_seller_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "금액:"
        android:id = "@+id/seller_price_tag"/>

    <TextView
        android:layout_marginStart="@dimen/margin_size"
        app:layout_constraintLeft_toRightOf="@id/seller_price_tag"
        app:layout_constraintTop_toBottomOf="@id/textview_seller_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "10,000"
        android:id = "@+id/seller_price"/>

    <TextView
        android:id = "@+id/seller_count_tag"
        android:layout_marginStart="@dimen/margin_size"
        app:layout_constraintTop_toBottomOf="@id/seller_price_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imageView_seller_product"
        android:text = "수량:"/>

    <TextView
        android:id = "@+id/seller_count"
        android:layout_marginStart="@dimen/margin_size"
        app:layout_constraintTop_toBottomOf="@id/seller_price_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/seller_count_tag"
        android:text = "2"/>

    <ImageButton
        android:id = "@+id/imagebutton_seller_order_confirm"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/ic_arrow_right_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:text = "상품준비"
        android:id = "@+id/button_seller_product_state_convert"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/margin_size"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView_seller_product"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/button_seller_product_state_convert"/>



</androidx.constraintlayout.widget.ConstraintLayout>