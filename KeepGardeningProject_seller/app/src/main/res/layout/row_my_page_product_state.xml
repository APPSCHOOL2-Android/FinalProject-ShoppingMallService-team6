<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textView_seller_product_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_size"
                    android:fontFamily="@font/nanum_square_round_regular"
                    android:text="결제완료"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView_seller_product"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/margin_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_size_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textView_seller_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="주문번호 : " />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textview_seller_product_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="000012345" />
                </LinearLayout>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginTop="@dimen/margin_size_top"
                    android:id="@+id/textview_seller_productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_extra_bold"
                    android:text="제품이름"
                    android:textSize="@dimen/text_size_20"/>


                <LinearLayout
                    android:layout_marginTop="@dimen/margin_size_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:gravity="bottom"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom|right">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/seller_price_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_size"
                            android:fontFamily="@font/nanum_square_round_regular"
                            android:text="금액:" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/seller_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_size"
                            android:fontFamily="@font/nanum_square_round_regular"
                            android:text="10,000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/seller_count_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_size"
                            android:fontFamily="@font/nanum_square_round_regular"
                            android:text="수량:" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/seller_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_size"
                            android:fontFamily="@font/nanum_square_round_regular"
                            android:text="2" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:orientation="vertical">
                <ImageButton
                    android:layout_weight="1"
                    android:id="@+id/imagebutton_seller_order_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="#00FFFFFF"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_arrow_right_24px" />

                <Button
                    android:id="@+id/button_seller_product_state_convert"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:textSize="16sp"
                    android:layout_margin="@dimen/margin_size_top"
                    android:layout_weight="2"
                    android:fontFamily="@font/nanum_square_round_bold"
                    android:text="배송하기" />
            </LinearLayout>



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



</LinearLayout>