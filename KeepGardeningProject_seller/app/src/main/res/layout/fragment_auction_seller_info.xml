<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".UI.AuctionSellerInfo.AuctionSellerInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/semiwhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_auctionSellerInfo_userIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/nanum_square_round_bold"
            android:text="번호"
            android:textAlignment="center"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/textView_auctionSellerInfo_userNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/nanum_square_round_bold"
            android:text="닉네임"
            android:textAlignment="center"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/textView_auctionSellerInfo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/nanum_square_round_bold"
            android:text="입찰일시"
            android:textAlignment="center"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/textView_auctionSellerInfo_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/nanum_square_round_bold"
            android:text="입찰금액"
            android:textAlignment="center"
            android:textColor="@color/gray" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_auctionSellerInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>