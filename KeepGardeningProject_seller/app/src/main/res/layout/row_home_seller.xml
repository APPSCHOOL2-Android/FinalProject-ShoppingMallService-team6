<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="@dimen/margin_size_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/padding_size_middle"
        app:strokeColor="@color/gray"
        app:strokeWidth="0.2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_rowHomeSeller"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_size_top"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/textView_rowHomeSeller_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_size_top"
                android:fontFamily="@font/nanum_square_round_regular"
                android:text="상품 이름"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_rowHomeSeller_storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_size_top"
                android:fontFamily="@font/nanum_square_round_regular"
                android:text="상점 이름"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/textView_rowHomeSeller_productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_size_top"
                android:fontFamily="@font/nanum_square_round_regular"
                android:text="가격"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>